---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog'))
	.filter((post) => !post.data.draft)
	.sort(
		(a, b) =>
			new Date(b.data.pubDate).getTime() -
			new Date(a.data.pubDate).getTime()
	)
	.slice(0, 3);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main class="home">
			<section class="hero">
				<div class="hero-text">
					<p class="eyebrow">StackOrbit · Tech Notes & Labs</p>
					<h1>Deep technical notes from a computer engineer.</h1>
					<p class="subtitle">
						StackOrbit is where I break down projects, operating systems,
						security tricks, and AI tooling into clear, practical articles
						for developers and power users.
					</p>
					<div class="hero-actions">
						<a href="/blog" class="btn primary">Read the blog</a>
						<a href="/about" class="btn ghost">About & projects</a>
					</div>
				</div>
			</section>

			<section class="section latest">
				<header class="section-header">
					<h2>Latest posts</h2>
					<a href="/blog" class="see-all">View all posts →</a>
				</header>

				{posts.length === 0 ? (
					<p class="empty">No posts yet. First article coming soon.</p>
				) : (
					<ul class="post-grid">
						{posts.map(({ id, data }) => (
							<li class="post-card">
								<a href={`/blog/${id}/`} class="post-link">
									<p class="post-meta">
										<span>{new Date(data.pubDate).toLocaleDateString('en-US')}</span>
										{data.category && <span class="dot">•</span>}
										{data.category && <span>{data.category}</span>}
									</p>
									<h3>{data.title}</h3>
									<p class="post-desc">{data.description}</p>
									<p class="post-cta">Read more →</p>
								</a>
							</li>
						))}
					</ul>
				)}
			</section>

			<section class="section highlight">
				<div class="highlight-card">
					<h2>Projects & experiments</h2>
					<p>
						I document real projects—Windows tooling, Linux setups,
						backend experiments, and AI security helpers. Each article
						comes with code, commands, and “why this works”.
					</p>
					<a href="/about" class="btn ghost">Explore projects</a>
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>

<style>
	.home {
		max-width: 960px;
		margin: 0 auto;
		padding: 2.5rem 1.25rem 3.5rem;
	}

	.hero {
		padding: 2.5rem 0 2rem;
	}

	.hero-text {
		max-width: 720px;
	}

	.eyebrow {
		font-size: 0.8rem;
		text-transform: uppercase;
		letter-spacing: 0.16em;
		color: rgba(0, 0, 0, 0.55);
		margin-bottom: 0.6rem;
	}

	h1 {
		font-size: clamp(2.1rem, 3vw, 2.6rem);
		margin: 0 0 0.9rem;
	}

	.subtitle {
		margin: 0 0 1.4rem;
		font-size: 0.98rem;
		color: rgba(0, 0, 0, 0.78);
		line-height: 1.7;
	}

	.hero-actions {
		display: flex;
		flex-wrap: wrap;
		gap: 0.75rem;
	}

	.section {
		margin-top: 2.5rem;
	}

	.section-header {
		display: flex;
		align-items: baseline;
		justify-content: space-between;
		gap: 1rem;
		margin-bottom: 1rem;
	}

	.section-header h2 {
		margin: 0;
		font-size: 1.2rem;
	}

	.see-all {
		font-size: 0.9rem;
		color: var(--accent);
		text-decoration: none;
	}

	.see-all:hover {
		text-decoration: underline;
	}

	.post-grid {
		list-style: none;
		padding: 0;
		margin: 0;
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
		gap: 1.25rem;
	}

	.post-card {
		margin: 0;
	}

	.post-link {
		display: block;
		padding: 1rem 1.1rem;
		border-radius: 0.9rem;
		border: 1px solid rgba(0, 0, 0, 0.06);
		background: white;
		text-decoration: none;
		color: inherit;
		box-shadow: 0 6px 20px rgba(15, 23, 42, 0.04);
		transition: transform 0.13s ease, box-shadow 0.13s ease,
			border-color 0.13s ease;
	}

	.post-link:hover {
		transform: translateY(-2px);
		box-shadow: 0 10px 30px rgba(15, 23, 42, 0.08);
		border-color: rgba(0, 0, 0, 0.12);
	}

	.post-meta {
		margin: 0 0 0.35rem;
		font-size: 0.78rem;
		color: rgba(0, 0, 0, 0.6);
		display: flex;
		align-items: center;
		gap: 0.4rem;
	}

	.post-meta .dot {
		font-size: 0.9rem;
	}

	.post-card h3 {
		margin: 0 0 0.4rem;
		font-size: 1rem;
	}

	.post-desc {
		margin: 0 0 0.7rem;
		font-size: 0.9rem;
		color: rgba(0, 0, 0, 0.76);
	}

	.post-cta {
		margin: 0;
		font-size: 0.86rem;
		color: var(--accent);
	}

	.empty {
		margin: 0.5rem 0 0;
		font-size: 0.95rem;
		color: rgba(0, 0, 0, 0.7);
	}

	.highlight {
		margin-top: 2.75rem;
	}

	.highlight-card {
		border-radius: 1rem;
		padding: 1.6rem 1.5rem;
		background: linear-gradient(
			135deg,
			rgba(79, 70, 229, 0.04),
			rgba(236, 72, 153, 0.04)
		);
		border: 1px solid rgba(0, 0, 0, 0.05);
	}

	.highlight-card h2 {
		margin: 0 0 0.6rem;
	}

	.highlight-card p {
		margin: 0 0 0.9rem;
		font-size: 0.95rem;
		color: rgba(0, 0, 0, 0.8);
		max-width: 640px;
	}

	.btn {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		padding: 0.55em 1.2em;
		border-radius: 999px;
		font-size: 0.9rem;
		font-weight: 600;
		text-decoration: none;
		cursor: pointer;
		border: 1px solid transparent;
		transition: background 0.15s ease, color 0.15s ease,
			border-color 0.15s ease, transform 0.15s ease,
			box-shadow 0.15s ease;
	}

	.btn.primary {
		background: var(--accent);
		color: white;
		border-color: var(--accent);
		box-shadow: 0 10px 25px rgba(37, 99, 235, 0.25);
	}

	.btn.primary:hover {
		transform: translateY(-1px);
		box-shadow: 0 12px 30px rgba(37, 99, 235, 0.32);
	}

	.btn.ghost {
		background: white;
		color: var(--accent);
		border-color: rgba(0, 0, 0, 0.08);
	}

	.btn.ghost:hover {
		border-color: rgba(0, 0, 0, 0.16);
		transform: translateY(-1px);
	}

	@media (max-width: 720px) {
		.home {
			padding: 1.75rem 1.1rem 3rem;
		}

		.hero {
			padding-top: 1.5rem;
		}
	}
</style>
